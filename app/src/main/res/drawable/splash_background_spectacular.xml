<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo base -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#1A0B3D"
                android:centerColor="#6A1B9A"
                android:endColor="#9C27B0" />
        </shape>
    </item>
    
    <!-- Overlay con brillo -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="600dp"
                android:centerX="0.3"
                android:centerY="0.3"
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
    
    <!-- Overlay inferior -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="0.8"
                android:centerY="0.8"
                android:startColor="#15BB86FC"
                android:endColor="#00BB86FC" />
        </shape>
    </item>
</layer-list>
