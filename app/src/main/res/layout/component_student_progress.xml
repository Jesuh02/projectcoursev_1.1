<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/studentProgressContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#181828"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:visibility="gone">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu progreso en este curso"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        android:id="@+id/courseProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:progressDrawable="@drawable/progress_bar_gradient"
        android:max="100"
        android:progress="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/courseProgressTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#B39DDB"
            android:textSize="14sp"
            tools:text="2 de 3 tareas completadas" />

        <TextView
            android:id="@+id/courseGradeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B39DDB"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="CalificaciÃ³n: 7.0/10" />
    </LinearLayout>
    <TextView
        android:id="@+id/courseStatusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>
</LinearLayout>