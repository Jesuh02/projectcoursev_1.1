<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginTop="8dp"
    android:background="#2A2A2A"> <!-- Slightly different background for distinction -->

    <EditText
        android:id="@+id/taskNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la Tarea"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        android:background="#1A1A1A"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/taskDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="DescripciÃ³n (opcional)"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        android:background="#1A1A1A"
        android:padding="10dp"
        android:minLines="2"
        android:gravity="top"/>

    <!-- Task Content Container -->
    <LinearLayout
        android:id="@+id/taskContentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp" />

    <!-- Add Content Buttons for Task -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/addTaskVideoButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agregar Video"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/addTaskDocumentButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agregar Documento"
            android:textSize="12sp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/deleteTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:text="Eliminar Tarea"
        android:textColor="#FF0000"
        android:backgroundTint="#444444"
        android:textSize="10sp"/>

</LinearLayout>